$(function () {
    const id = $("input[name='id']").val().trim();
    loadMyReserveList(id);
})

function loadMyReserveList(movie_id){
    $.ajax({
        url: conPath + "/myreserve/detail?id=" + movie_id,
        type: "GET",
        cache: false,
        success: function (data, status) {
            if (status == "success") {
                // 서버측 에러 메시지 있는 경우
                if (data.status != "OK") {
                    alert(data.status + "왜 안될까용!");
                    return;
                }
                buildMyReserveList(data); // 댓글 목록 렌더링
            }
        },
    });
}

function buildMyReserveList(result){
	const out = [];
	
	result.data.forEach(myReserve => {
		var id = myReserve.id;
		var seat = myReserve.seat;
		
	const row = ` 
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">${id}</h3>
                        <div class="subheading mb-3">${seat}</div>
                            <p>좌석: ${seat}</p>
                        </div>
                <div class="flex-shrink-0"><span class="text-primary">${runtime}분</span></div>
            </div>`
        ;
        out.push(row);
    });
    $("#myReserveBySeat").html(out.join("\n"));
}


